function setup() {
  createCanvas(400, 400);
}
function setup() {
  createCanvas(400, 400);
}

function draw() {
  background(220);
}function setup() {
  createCanvas(400, 400);
}

function desenha_bola_vermelha() {
  if (mouseIsPressed) {
    fill("red");
    circle(200, 100, 100);
  }
}

function desenha_bola_azul() {
  if (mouseIsPressed) {
    fill("blue");
    circle(200, 300, 100);
  }
}

function draw() {
  background(220);

  if (mouseY > 200){
    desenha_bola_vermelha();    
  } else {
    desenha_bola_azul();
  }
}
